<%-include('../layouts/header', {title: title})%>
<%-include('../layouts/menu')%>

<h1><%=title%></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%=book.title%></h5>
                <p class="card-text">Описание: <%=book.description%></p>
                <p class="card-text">Автор: <%=book.authors%></p>
                <p class="card-text">В избранном: <%=book.favorite === 'true' ? 'да' : 'нет'%></p>
                <p class="card-text">Обложка: <%=book.fileCover%></p>
                <p class="card-text">Имя файла: <%=book.fileName%></p>

                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/books/update/<%=book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/books/delete/<%=book.id%>" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%-include('../layouts/footer')%>
