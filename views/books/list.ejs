<%-include('../layouts/header', {title: title})%>
<%-include('../layouts/menu')%>

<h1><%=title%></h1>
<a class="btn btn-sm btn-primary" href="/books/create">Добавить запись</a>

<%if (books.length) {%>
    <table class="table table-striped table-sm  mt-3">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Заголовок</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>

        <%books.map((book, idx) => {%>
            <tr>
                <th scope="row"><%=++idx%></th>
                <td><%=book.title%></td>
                <td class="text-right">
                    <a class="btn btn-sm btn-success" href="/books/<%=book.id%>">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </a>
                    <a class="btn btn-sm btn-primary" href="/books/update/<%=book.id%>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/books/delete/<%=book.id%>" method="GET" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </td>
            </tr>
        <%})%>
        </tbody>
    </table>

<%} else {%>
    <h3 class="mt-5">Записей пока нет</h3>
<%}%>

<%-include('../layouts/footer')%>
